[user]
        name = Theo Keane
        email = <relevant default email for this machine>
        signingkey = /path/to/.ssh/<name_of_key>.pub
[core]
        excludesfile = /path/to/home/.gitignore
        editor = vim
        autocrlf = input
        pager = delta
[color]
        ui = auto
[gpg]
        format = ssh
[commit]
        gpgsign = true
[rerere]
        enabled = true
[init]
        defaultBranch = main
[rebase]
        updateRefs = true
[fetch]
        prune = true
[interactive]
        diffFilter = delta --color-only
[delta]
        navigate = true
[merge]
        conflictstyle = diff3
[diff]
        colorMoved = default
[maintenance]
        # repo = /path/to/repo
